<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_items"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="7dp">

    <CheckBox
        android:id="@+id/file_check"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_checkbox_file"
        android:button="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/fileicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/file_check"
        android:scaleType="centerCrop"
        android:src="@drawable/filesystem_icon_default"
        android:textSize="26dip" />

    <ImageView
        android:id="@+id/ivDetails"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="7dp"
        android:src="@drawable/theme_item_arrow_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ivDetails"
        android:layout_toRightOf="@id/fileicon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filetext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:text="ai.houzi.xiao"
            android:textColor="#222222"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fileInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="15dip"
            android:text="0B  00-00-00"
            android:textColor="#888888"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>